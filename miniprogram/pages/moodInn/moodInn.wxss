/* miniprogram/pages/moodInn/moodInn.wxss */
.container {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.old-mood {
  width: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.old-mood-model {
  display: flex;
  width: 100%;
  border-bottom: 1px solid #0079fe;
}

.old-mood-text {
  flex: 1;
}

.old-mood-model button {
  font-size: 12px;
}

.new-mood {
  width: 100%;
}

.new-mood-text {
  width: 100%;
  border-radius: 5px;
  background: #ffffff;
}
