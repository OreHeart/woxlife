/* miniprogram/pages/printer/printer.wxml.wxss */
.view-top {
  display: flex;
  margin-top: 20px;

}

.view-top .ip-input {
  border: 1px solid;
  border-radius: 5px;
  display: inline-block;
}

.view-top text {
  display: inline-block;
  font-size: 16px;
  text-align: center;
  margin-left: 20px;
}

.view-controll button {
  border: 1px solid;
}

.move-home,
.get-list
{
  margin-top: 5px;
}

.view-controll-current {
  display: flex;
  margin: 5px;
}

.view-controll-current text {
  flex: 1;
  text-align: center;
  line-height: 40px;
}

.current-check {
  background: black;
  color: white;
}

.file-list {
  width: 100%;
}

.file-list-item {
  display: flex;
  padding: 10px;
  border-bottom: 1px solid;
}

.file-list-item .file-name {
  flex: 1;
}